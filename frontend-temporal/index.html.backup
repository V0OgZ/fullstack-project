    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }
        
        .header {
            background: linear-gradient(90deg, #4a6cf7 0%, #667eea 100%);
            color: white;
            padding: 20px;
            text-align: center;
            box-shadow: 0 2px 10px rgba(74, 108, 247, 0.3);
        }
        
        .header h1 {
            margin: 0;
            font-size: 2.5em;
            text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        }
        
        .header p {
            margin: 10px 0 0 0;
            font-size: 1.2em;
            opacity: 0.9;
        }
        
        .main-content {
            display: flex;
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            gap: 20px;
        }
        
        .console-container {
            flex: 2;
        }
        
        .sidebar {
            flex: 1;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 20px;
            color: white;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .sidebar h3 {
            color: #4a6cf7;
            margin-top: 0;
            font-size: 1.3em;
        }
        
        .command-category {
            margin-bottom: 20px;
        }
        
        .command-category h4 {
            color: #a8c8f0;
            margin-bottom: 10px;
            font-size: 1.1em;
        }
        
        .command-list {
            list-style: none;
            padding: 0;
        }
        
        .command-list li {
            padding: 5px 0;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            color: #cbd5e1;
            cursor: pointer;
            transition: color 0.2s;
        }
        
        .command-list li:hover {
            color: #4a6cf7;
        }
        
        .status-panel {
            background: rgba(74, 108, 247, 0.1);
            border: 1px solid rgba(74, 108, 247, 0.3);
            border-radius: 6px;
            padding: 15px;
            margin-bottom: 20px;
        }
        
        .status-panel h4 {
            margin: 0 0 10px 0;
            color: #4a6cf7;
        }
        
        .status-item {
            display: flex;
            justify-content: space-between;
            margin: 5px 0;
            font-size: 0.9em;
        }
        
        .status-value {
            font-weight: bold;
            color: #22c55e;
        }
        
        .footer {
            text-align: center;
            padding: 20px;
            color: #64748b;
            font-size: 0.9em;
        }
        
        .quick-actions {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        
        .quick-btn {
            padding: 8px 16px;
            background: rgba(74, 108, 247, 0.2);
            border: 1px solid rgba(74, 108, 247, 0.3);
            border-radius: 4px;
            color: #a8c8f0;
            cursor: pointer;
            font-size: 0.8em;
            transition: all 0.2s;
        }
        
        .quick-btn:hover {
            background: rgba(74, 108, 247, 0.3);
            color: white;
        }
        
        @media (max-width: 768px) {
            .main-content {
                flex-direction: column;
                padding: 10px;
            }
            
            .header h1 {
                font-size: 2em;
            }
            
            .sidebar {
                order: 2;
            }
        }
    </style>
</head>
<body>
